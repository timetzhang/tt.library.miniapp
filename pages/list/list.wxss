/**index.wxss**/
.container{
  padding-top:5px; 
}

.list{
  margin-top:10px;
  width:100%;
}

.list > .image{
  width: calc(30% - 10px);
  height: 120px;
  float:left;
  padding-left:10px;
}

.list > .meta{
  width: calc(70% - 20px);
  line-height: 20px;
  float:left;
  padding:0 10px;
}

.list > .meta .name{
  font-size:15px;
  font-weight: bold;
}

.list > .meta .author{
  font-size:10px;
  color: #666;
  padding:20px 0;
}

.list > .meta .publisher{
  font-size:12px;
}

.list > .meta .status{
  font-size:12px;
}

.spliter{
  clear: both;
  display: block;
  margin:10px;
  padding:10px 0;
  border-bottom:1px solid #eee;
}

.content{
  display: fixed;
  left:10px;
  top: 10px;
  padding:10px;
}