/**index.wxss**/
.list{
  margin-top:10px;
  width:100%;
}

.list > .image{
  width: calc(30% - 10px);
  height: 150px;
  float:left;
  padding-left:10px;
}

.list > .meta{
  width: calc(70% - 20px);
  line-height: 20px;
  float:left;
  padding:0 10px;
}

.list > .meta .name{
  font-size:15px;
  font-weight: bold;
}

.list > .meta .author{
  font-size:12px;
  color: #666;
}

.list > .meta .details{
  font-size:12px;
  margin: 5px 0;
}

.list > .meta .publisher{
  font-size:12px;
}

.list > .meta .status{
  font-size:12px;
}