/**index.wxss**/
.container{
  padding-top:5px; 
}

.list{
  margin-top:10px;
  width:100%;
}

.list > .image{
  width: calc(30% - 10px);
  height: 150px;
  float:left;
  padding-left:10px;
}

.list > .meta{
  width: calc(70% - 20px);
  line-height: 20px;
  float:left;
  padding:0 10px;
}

.list > .meta .name{
  font-size:15px;
  font-weight: bold;
}

.list > .meta .author{
  font-size:12px;
  color: #666;
}

.list > .meta .detailsComplete{
  font-size:10px;
  margin: 5px 0;
  overflow-y: hidden;
}

.list > .meta .detailsLess{
  font-size:10px;
  margin: 5px 0;
  text-overflow: ellipsis;
  max-height: 60px;
  overflow-y: hidden;
}

.list > .meta .publisher{
  font-size:12px;
}

.list > .meta .status{
  font-size:12px;
}